<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>        
        <!-- Database connection settings -->
        <property name="hibernate.connection.datasource">java:comp/env/jdbc/MySQLDS</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="show_sql">true</property>
        <mapping class="com.aperea.clscustomerforms.Address"></mapping>
        <mapping class="com.aperea.clscustomerforms.Company"></mapping>
        <mapping class="com.aperea.clscustomerforms.Registration"></mapping>

        <mapping class="com.aperea.clscustomerforms.Requestor"></mapping>

        <mapping class="com.aperea.clscustomerforms.Student"></mapping>


    </session-factory>
</hibernate-configuration>
